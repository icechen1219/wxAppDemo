/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 60px;
  color: #968;
}

.usermotto:hover {
  font-size: 56rpx;
  font-weight: bold;
  font-style: oblique;
}

/** 修改默认的navigator点击态 **/

.navigator-hover {
  color: blue;
}

.weather {
  margin-top: 30rpx;
  color: orange;
  font-weight: bold;
}

.footer{
  width: 90%;
 margin: 0 auto;
 padding: 0;
}

.text {
  font-size: 40rpx;
  color: magenta;
  line-height: 1em;
  font-family: "Helvetica Neue",
                 Helvetica,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 微软雅黑,
                 Arial,
                 sans-serif;
  display: block;
  text-align: center;
}

.text_author {
  font-size: 25rpx;
  color: #bbb;
  font-family: "Helvetica Neue",
                 Helvetica,
                 "PingFang SC",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 微软雅黑,
                 Arial,
                 sans-serif;
  display: block;
  text-align: right;
}
