page {
    background-color: #fff;
    height: 100%;
}
.top{
  display: flex;
  flex-direction: row;
}
.input {
  /* margin-left: 20rpx; */
  /* width: 80%;  */
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  /* background-color: gainsboro; */
  text-align: center;
  margin: 0 auto;
}
.input button{
  border-radius: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  width: 160rpx;
  text-align: center;
  padding: 0;
  margin: 0 5rpx;
}
.on{
  background-color: #bbb;
}
.icon {
   width: 10%; 
}

.wrapper {
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
}
.main-section {
    display: flex;
}
.banner {
    height: 150px;
}
.banner image {
    width: 100%;
    height: 150px;
}

.right-main {
    flex: 6;
}
.right-main .item {
    display: flex;
    padding: 10px;
    border-bottom: 1px #f3f3f3 solid;
}
.right-main .item .dish-img {
    flex: 1;
    width: 120rpx;
    height: 120rpx;
}
.right-main .item .info {
    flex: 3;
    padding: 0 10px;
}
.right-main .item text {
     display: block; 
    line-height: 1.5em;
     width: 520rpx; 
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.right-main .item .desc {
    font-size: 18px;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
}
.right-main .item .tips {
    font-size: 14px;
    color: #ccc;
}
.right-main .item .price {
    font-size: 12px;
    color: orange;
    /* display: flex;
    flex-direction: row; */
}
.add-to-cart {
    width: 100rpx;
    height: 120rpx;
    font-size: 18px;
    border: 1rpx solid #dedede;
    border-radius: 5px;
    background: #dedede;
    color: #999;
    text-align: center;
    padding: 0 auto;
}

.footer {
  width: 100%;
  height: 25rpx;
  font-size: 25rpx;
  color: #999;
  text-align: center;
}