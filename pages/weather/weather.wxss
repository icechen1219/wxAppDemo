/* pages/weather/weather.wxss */
.page{
  margin: 0 0 50rpx 50rpx;
}

.top{
  display: flex;
  flex-direction: row;
}
.input {
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  background-color: gainsboro;
}
.grayStyle{
  color: gray;
}
.icon {
  width: 20%;
}
.body{
  text-align: center;
  display: flex;
  flex-direction: column;
}

.city{
  font-size: 100rpx;
}
.today{
  font-size: 70rpx;
}
.bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.weather{
  font-size: 60rpx;
  width: 50%;
}
.right{
  display: flex;
  flex-direction: column;
}
.wind{
  font-size: 50rpx;
}
.temp{
  font-size: 60rpx;
  font-family: Arial, Helvetica, sans-serif
}

.tips{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}